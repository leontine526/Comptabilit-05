modules = ["python-3.11", "web", "nodejs-20"]
run = "python main.py"

[nix]
channel = "stable-24_05"
packages = ["freetype", "glibcLocales", "gumbo", "harfbuzz", "iana-etc", "jbig2dec", "libGL", "libGLU", "libjpeg_turbo", "libxcrypt", "mupdf", "openjpeg", "openssl", "pkg-config", "postgresql", "swig", "tesseract", "xcbuild", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "python main.py"]

[workflows]

[[workflows.workflow]]
name = "Diagnostic des Erreurs Complet"
author = 42935253
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python error_diagnostics.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app_diagnostics.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python check_templates.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python check_routes.py"

[[ports]]
localPort = 5000
externalPort = 80
